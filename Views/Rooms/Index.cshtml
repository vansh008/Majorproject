@model IEnumerable<Majorproject.Models.Room>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Room_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Number)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Room_Stars)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_Number)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Room_Stars)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Services -->
<div id="services" class="cards-2">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">SERVICES</div>
                <h2>Choose The Service Package<br> That Suits Your Needs</h2>
            </div> <!-- end of col -->
        </div> <!-- end of row -->
        <div class="row">
            <div class="col-lg-12">

                <!-- Card -->
                <div class="card">
                    <div class="card-image">
                        <img class="img-fluid" src="images/services.jpg" alt="alternative">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">ONE BEDROOM APARTMENT</h3>
                        <p>For our modern explorers, Pullman Auckland is pleased to offer a room service menu with a wide range of modern New Zealand and international cuisine made with fresh local produce.</p>
                        <ul class="list-unstyled li-space-lg">
                            <li class="media">
                                <i class="fas fa-square"></i>
                                <div class="media-body">International direct dial telephone</div>
                            </li>
                            <li class="media">
                                <i class="fas fa-square"></i>
                                <div class="media-body">In-room safety deposit boxes</div>
                            </li>
                        </ul>
                        <p class="price">Starting at <span>$199</span></p>
                    </div>
                    <div class="button-container">
                        <a class="btn-solid-reg page-scroll" asp-area="" asp-controller="Bookings" asp-action="Index">Book Now</a>
                    </div> <!-- end of button-container -->
                </div>
                <!-- end of card -->
                <!-- Card -->
                <div class="card">
                    <div class="card-image">
                        <img class="img-fluid" src="images/services1.jpg" alt="alternative">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">ONE BEDROOM DELUXE APARTMENT</h3>
                        <p>This spacious residential-style apartment inspires your mind with a spectacular view of Auckland Harbor and City. The One Bedroom Deluxe Apartment offers you a private balcony where you can make the most of the remarkable view.</p>
                        <ul class="list-unstyled li-space-lg">
                            <li class="media">
                                <i class="fas fa-square"></i>
                                <div class="media-body">Voicemail</div>
                            </li>
                            <li class="media">
                                <i class="fas fa-square"></i>
                                <div class="media-body">Audible Smoke Alarms</div>
                            </li>
                        </ul>
                        <p class="price">Starting at <span>$299</span></p>
                    </div>
                    <div class="button-container">
                        <a class="btn-solid-reg page-scroll" asp-area="" asp-controller="Bookings" asp-action="Index">Book Now</a>
                    </div> <!-- end of button-container -->
                </div>
                <!-- end of card -->
                <!-- Card -->
                <div class="card">
                    <div class="card-image">
                        <img class="img-fluid" src="images/services2.jpg" alt="alternative">
                    </div>
                    <div class="card-body">
                        <h3 class="card-title">TWO BEDROOM APARTMENT</h3>
                        <p>The sleek interior of the apartment allows you to experience two bedrooms, fully equipped kitchen, living/dining area, and stylish generous work and play area with complimentary Wi-Fi.</p>
                        <ul class="list-unstyled li-space-lg">
                            <li class="media">
                                <i class="fas fa-square"></i>
                                <div class="media-body">Sky TV</div>
                            </li>
                            <li class="media">
                                <i class="fas fa-square"></i>
                                <div class="media-body"> Wi-Fi & High-speed wireless</div>
                            </li>
                        </ul>
                        <p class="price">Starting at <span>$299</span></p>
                    </div>
                    <div class="button-container">
                        <a class="btn-solid-reg page-scroll" asp-area="" asp-controller="Bookings" asp-action="Index">Book Now</a>
                    </div> <!-- end of button-container -->
                </div>
                <!-- end of card -->

            </div> <!-- end of col -->
        </div> <!-- end of row -->
    </div> <!-- end of container -->
</div> <!-- end of cards-2 -->
<!-- end of services -->